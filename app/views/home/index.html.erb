 <% provide :title, t(:home) %>
<div class="row">
  <div class="columns small-12">
    <script src="/assets/tagcanvas.min.js" type="text/javascript"></script>
    <div id="myCanvasContainer">
      <canvas width="300" height="250" id="myCanvas" style="">
        <p><img src='/foodie_logo.jpg'></p>
      </canvas>
    </div>
    <div id="tags" style="display: none;">
      <ul>
        <%@tags.each do |tag|%>
         <li><%=link_to tag.name, tag.url, :target=>"_blank"%></li>
         <%end if @tags%>
       </ul>
     </div>
    <script type="text/javascript">
      window.onload = function() {
        try {
                // var gradient = {
                //  0:    '#f00', // red
                //  0.33: '#ff0', // yellow
                //  0.66: '#0f0', // green
                //  1:    '#00f'  // blue
                // };
                // TagCanvas.weightGradient = gradient;

                  TagCanvas.Start('myCanvas','tags',{
                    shape: "hcylinder",
                    lock: "x",
                    textColour: null,//'#008CBA',
                    textHeight: 20,
                    outlineColour: '#0000ff',
                    reverse: true,
                    depth: 0.5,
                    maxSpeed: 0.02
                  });
                } catch(e) {
              // something went wrong, hide the canvas container
              document.getElementById('myCanvasContainer').style.display = 'none';
            }
          };
    </script>
  </div>
</div>

