<div class="address-content">
  <% if controller_name == 'groupbuys' %>
  <div class="left send-to"><%= t(:send_to) %></div>
  <% else %>
  <div class="left <%= site.default == 1 ? 'checked' : 'unchecked' %>">
    <i class="fa fa-check-circle"></i>
  </div>
  <% end %>
  <div class="left address-detail" data-id="<%= site.id %>">
    <div class="name-mobile">
      <span class="name"><%= site.area %></span>
    </div>
    <div class="address"><%= site.address %></div>
  </div>
  <% if params[:id].nil? && %>
  <%= link_to site_path(site), method: :delete, confirm: t(:delete_insure) do %>
  <div class="right destroy-address">
    <i class="fa fa-trash"></i>
  </div>
  <% end %>
  <% end %>
  <% url = params[:id].present? ? sites_path : edit_site_path(site) %>
  <%= link_to url do %>
  <div class="right edit-address" data-url='<%= sites_path %>'><i class="fa fa-pencil"></i></div>
  <% end %>

  <div class="clear"></div>
</div>
<hr />
