<div class="main-content">
  <% if @user %>
    <div class="weui_cells">
      <div class="weui_cell">
        <div class="weui_cell_bd weui_cell_primary">
          <div class="avatar"><%= t(:avatar) %></div>
        </div>
        <div class="weui_cell_ft">
          <%= image_tag @user.avatar %>
        </div>
      </div>

      <div class="weui_cell">
        <div class="weui_cell_bd weui_cell_primary">
          <div class="nickname"><%= t(:nickname) %></div>
        </div>
        <div class="weui_cell_ft">
          <%= @user.nickname %>
        </div>
      </div>

      <div class="weui_cell">
        <div class="weui_cell_bd weui_cell_primary">
          <div class="sex"><%= t(:sex) %></div>
        </div>
        <div class="weui_cell_ft">
          <%= t(@sex.to_sym) %>
        </div>
      </div>
    </div>
    

    <div class="weui_cells">
      <div class="weui_cell">
        <div class="weui_cell_bd weui_cell_primary">
          <div class="group"><%= t(:group) %></div>
        </div>
        <div class="weui_cell_ft">
          <%= @user.group.try(:name) %>
        </div>
      </div>

      <div class="weui_cell">
        <div class="weui_cell_bd weui_cell_primary">
          <div class="area"><%= t(:area) %></div>
        </div>
        <div class="weui_cell_ft">
          <%= @user.location %>
        </div>
      </div>

      <div class="weui_cell">
        <div class="weui_cell_bd weui_cell_primary">
          <div class="profession"><%= t(:profession) %></div>
        </div>
        <div class="weui_cell_ft">
          <%= @user.profession %>
        </div>
      </div>
    </div>

    <% if current_user == @user %>
      <%= link_to t(:edit), edit_profile_path(@user), class: 'weui_btn weui_btn_default' %>
      <%= link_to t(:logout), logout_path, method: :delete, class: 'weui_btn weui_btn_warn' %>
    <% end %>
  <% end %>
</div>