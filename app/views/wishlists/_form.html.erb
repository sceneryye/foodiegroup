<div class="create-wishlist">
  <%= form_for @wishlist, multipart: true do |f| %>
  <input type="hidden" name="wishlist[user_id]" value="<%= current_user.id %>">
  <div class="row">
    <div class="columns small-10 small-offset-1">
      <%= f.text_field :title, placeholder: 'Title' %>
    </div>
  </div>

  <div class="row">
    <div class="columns small-5 small-offset-1">
    <button class="file-upload tiny">
      <%= f.file_field :picture, class: "file-input" %>
      <%= t(:upload) %>
      </button>
    </div>
    <div class="columns small-5 small-offset-1">
      <img src=''>
    </div>
  </div>

  <div class="row">
    <div class="columns small-10 small-offset-1">
      <%= f.text_field :price, placeholder: 'Price' %>
    </div>
  </div>

  <div class="row">
    <div class="columns small-10 small-offset-1">
      <%= f.text_area :description, placeholder: 'Description', rows: 5 %>
    </div>
  </div>

  <div class="row">
    <div class="columns small-10 small-offset-1">
      <%= f.submit t(:submit), class: 'button success small' %>
    </div>
  </div>
  <% end %>
</div>