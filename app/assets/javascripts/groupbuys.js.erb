//-----------------编辑groupbuy的图片-----------------//
$('.delete-pic').on('click', function(){
  var url = ',/' + $(this).parent().find('img').attr('src').split('/').slice(-2).join('/');
  var id = $(this).parent().data('id');
  var post_url = $(this).parent().data('posturl');
  var that = $(this);
  $.ajax({
    url: post_url,
    type: 'post',
    data: {
      id: id,
      url: url
    },
    success: function(e) {
      if(e != 'failed') {
        that.parent().remove();
        $('.pic_urls').attr('src', e);
      }
    }
  });
});

