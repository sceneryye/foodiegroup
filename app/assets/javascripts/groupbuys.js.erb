function checkPositiveInteger(obj){
  var num = obj.val();
  if(isNaN(num) || num < 1 || num % 1 != 0) {
    obj.val('');
    var errmsg = '只能为正整数！';
    alert(errmsg);
  }
}

function checkPositiveNumber(obj){
  var num = obj.val();
  if(isNaN(num) || num < 0 ) {
    obj.val('');
    var errmsg = '只能为正数！';
    alert(errmsg);
  }
}


